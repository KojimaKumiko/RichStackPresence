<UserControl x:Class="RichClient.Views.GW2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RichClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Visibility="Hidden" Orientation="Horizontal">
            <TextBlock Text="Enter your API-Key here: " />
            <TextBox Margin="10 0 10 0" Width="100px" />
            <Button Padding="10 0 10 0" Content="Send" />
        </StackPanel>
        <StackPanel Visibility="Visible">
            <Expander FontWeight="Bold" Padding="10 10 0 10" Header="Account">
                <local:GW2AccountView />
            </Expander>
            <Expander FontWeight="Bold" Padding="10 10 0 10" Header="Characters">

            </Expander>
            <Expander FontWeight="Bold" Padding="10 10 0 10" Header="sPvP">

            </Expander>
            <Expander FontWeight="Bold" Padding="10 10 0 10" Header="WvW">

            </Expander>
            <Expander FontWeight="Bold" Padding="10 10 0 10" Header="Trading Post">

            </Expander>
        </StackPanel>
    </StackPanel>
</UserControl>
